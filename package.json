{
  "name": "vue-communique",
  "description": "An advanced, flexible Vue notification system.",
  "version": "0.0.14",
  "author": {
    "name": "Ricardo Ruiz",
    "email": "ricardo@mrcodigo.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "notifications"
  ],
  "license": "MIT",
  "main": "dist/vue-communique.umd.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickyruiz/vue-communique.git"
  },
  "bugs": {
    "url": "https://github.com/rickyruiz/vue-communique/issues"
  },
  "homepage": "https://github.com/rickyruiz/vue-communique#readme",
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:lib": "vue-cli-service build --target lib --name vue-communique src/plugin/index.ts",
    "lint": "vue-cli-service lint",
    "test:unit": "vue-cli-service test:unit",
    "release:win": "powershell scripts/release.sh",
    "release:mac": "sh scripts/release.sh",
    "docs:dev": "vuepress dev vuepress",
    "docs:build": "vuepress build vuepress -d docs",
    "docs:clean": "rm -rf docs/**"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommitMsg.js"
  },
  "lint-staged": {
    "*.{js,vue}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/jest": "^24.0.22",
    "@types/webpack": "^4.39.8",
    "@types/webpack-env": "^1.14.1",
    "@vue/cli-plugin-babel": "^4.0.5",
    "@vue/cli-plugin-eslint": "^4.0.5",
    "@vue/cli-plugin-typescript": "^4.0.5",
    "@vue/cli-plugin-unit-jest": "^4.0.5",
    "@vue/cli-service": "^4.0.5",
    "@vue/eslint-config-prettier": "^4.0.1",
    "@vue/eslint-config-typescript": "^4.0.0",
    "@vue/test-utils": "^1.0.0-beta.29",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "core-js": "^3.4.1",
    "eslint": "5.16.0",
    "eslint-plugin-vue": "5.2.3",
    "ts-jest": "^24.1.0",
    "typescript": "^3.7.2",
    "vue": "^2.6.10",
    "vue-template-compiler": "^2.6.10",
    "vuepress": "^1.2.0"
  }
}
