{
  "name": "vue-communique",
  "description": "An advanced, flexible Vue notification system.",
  "version": "0.0.14",
  "author": {
    "name": "Ricardo Ruiz",
    "email": "ricardo@mrcodigo.com"
  },
  "keywords": [
    "vue",
    "vuejs",
    "plugin",
    "notifications"
  ],
  "license": "MIT",
  "main": "dist/vue-communique.umd.js",
  "typings": "types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rickyruiz/vue-communique.git"
  },
  "bugs": {
